post_install() {
	kana-p-poison -i > /dev/null 2> /dev/null
}

pre_upgrade() {
	if which kana-p-poison > /dev/null 2> /dev/null; then
		kana-p-poison -u > /dev/null 2> /dev/null
	else
		/usr/lib/kana-p/utils/kana-p-poison -u > /dev/null 2> /dev/null
	fi
}

post_upgrade() {
	kana-p-poison -i > /dev/null 2> /dev/null
}

pre_remove() {
	if which kana-p-poison > /dev/null 2> /dev/null; then
		kana-p-poison -u > /dev/null 2> /dev/null
	else
		/usr/lib/kana-p/utils/kana-p-poison -u > /dev/null 2> /dev/null
	fi
}
